@model Admin.Models.Movies

@{
    ViewData["Title"] = "Delete";
}

<h4>Delete Movie</h4>
<hr />
<h5>Are you sure you want to delete this?</h5>

<div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Title" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Title" class="form-control" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Image" class="control-label"></label>
        </div>
        <div class="col-9">
            <input id="file" class="form-control" readonly>
            <input type="hidden" asp-for="Image" id="data-img"/>
            <img src="@Model.Image" id="display-img" class="m-2 upload-img"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Description" class="control-label"></label>
        </div>
        <div class="col-9">
            <textarea asp-for="Description" class="form-control" readonly></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="ReleasedDateTime" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="ReleasedDateTime" class="form-control" type="datetime-local" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Genre" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Genre" class="form-control" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Price" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Price" class="form-control" readonly />
        </div>
    </div>
    <form asp-action="Delete" class="text-end">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Index", "Movies" )'">
            Back
        </button>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

 <style>
    .upload-img{
        width:100px; 
        height: 100px; 
        object-fit: cover;
        position: absolute;
        top: 29.4%;
        left: 30%;
    }

    input#file {
      width: 100%;
      padding: 115px 0 0 0;
      height: 100px;
      overflow: hidden;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      background: url('https://cdn1.iconfinder.com/data/icons/hawcons/32/698394-icon-130-cloud-upload-512.png') center center no-repeat #e4e4e4;
      border-radius: 20px;
      background-size: 60px 60px;
    }
</style>
