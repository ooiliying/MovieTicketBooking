    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="PortraitImage" class="control-label"></label>
        </div>
        <div class="col-9">
            <img src="@Model.PortraitImage" id="portrait-img" class="img-100" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="LandscapeImage" class="control-label"></label>
        </div>
        <div class="col-9">
            <img src="@Model.LandscapeImage" id="landscape-img" class="img-200x100" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Description" class="control-label"></label>
        </div>
        <div class="col-9">
            <textarea asp-for="Description" class="form-control" readonly></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="ReleasedDateTime" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="ReleasedDateTime" class="form-control" type="datetime-local" readonly/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Duration" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Duration" class="form-control" readonly/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Genre" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Genre" class="form-control" readonly/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Language" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Language" class="form-control" readonly/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="Price" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Price" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group text-end">
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Index", "Movies" )'">
            Back
        </button>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Movies", new { id = @Model?.Id })'">
            Edit
        </button>
    </div>
</div>

